<!DOCTYPE html>
<html>
  <head>
    <title>RecipeApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <main class="container mx-auto mt-5 px-5 flex flex-col">
      <div class="flex justify-between">
        <% if current_user %>
        <%= button_to(
          "Log Out",
          destroy_user_session_path,
          method: :delete,
          class: 'align-end text-white bg-red-600 p-2 rounded-sm mt-2'
        ) %>
        <%end%> 

        <div class="hide">
          <p class="notice flex items-center bg-blue-500 text-white text-sm font-bold" role="alert"><%= notice %></p>
          <p class="alert flex items-center bg-blue-500 text-white text-sm font-bold" role="alert"><%= alert %></p>
        </div>
       
      </div>
       
        <%= yield %>
    </main>
  </body>
</html>