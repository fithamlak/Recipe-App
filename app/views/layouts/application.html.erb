<!DOCTYPE html>
<html>
  <head>
    <title>RecipeApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="<%= user_signed_in? ? '' : 'bgmain' %>">
    <% if user_signed_in? %>
      <%= render partial: "shared/navmenu" %>
      <h2>Welcome</h2>
    <% end %>
    
    <div class='container mt-5'>
      <% if flash.any? %>
        <% flash.each do |type, msg| %>
          <div class="flash-notice flash-<%= type %>">
            <h3 class="<%= type==='notice' ? 'bg-success' : 'bg-danger' %> text-white p-2"><%= msg %></h3>
          </div>
        <% end %>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>