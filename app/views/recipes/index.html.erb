<%= stylesheet_link_tag "recipe", "data-turbo-track": "reload" %>

<section class="recipe-section">
<h1>All Recipes</h1>
<div class="d-flex flex-row-reverse">
  <%= link_to new_recipe_path, class: "btn btn-primary ms-3" do %>
    <%= content_tag :i, nil, class: "bi bi-plus-circle-fill" %>
    Add recipe
  <% end %>
<%= link_to public_recipes_path, class: "btn btn-success" do %>
  <%= content_tag :i, nil, class: "bi bi-arrow-up-right-circle-fill" %>
  Go to "Public Recipes"
<% end %>
</div>
<div class="recipe-container">
<table class="table table-striped table-bordered mt-4">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %></td>
        <td><%= recipe.description %></td>
        <td><%= link_to recipe_path(id: recipe.id), class: "btn btn-success" do %>
  <%= content_tag :i, nil, class: "bi bi-arrow-up-right-circle-fill" %>
  Go to "View"
<% end %></td>
        <td><%= link_to recipe_path(id: recipe.id), data: {turbo_method: :delete, turbo_confirm: 'Delete this recipe food?'}, class: "btn btn-danger" do %>
            <%= content_tag :i, nil, class: "bi bi-trash" %>
            Remove
          <% end %></td>  
      </tr>
    <% end %>
  </tbody>
</table>

</section>